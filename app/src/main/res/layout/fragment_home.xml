<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_bell"
        android:layout_gravity="right"
        android:layout_margin="7dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="D-25"
        android:textSize="25dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/mainPurple"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:text="₩ 70,000"
        android:textColor="@color/white"
        android:textSize="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60% 사용하셨습니다"
        android:textSize="15dp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray"
        android:layout_marginLeft="73dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/rounded_progress"
            android:layout_width="290dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="3dp"
            android:max="100"
            android:progress="60" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/rounded_square"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8월 소비내역"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnMbti"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:text="소비 MBTI 재검사"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_regular"
            android:backgroundTint="@color/skyblue_55"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegret"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:text="후회템 바로가기"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_regular"
            android:backgroundTint="@color/orange_66"/>
    </LinearLayout>



</LinearLayout>